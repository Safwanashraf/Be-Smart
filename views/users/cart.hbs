  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',

  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
	$.ajax({
				url: '/deleteCartProduct',
				data: {
					index: index,
					product: proId,

				},

				method: 'post',
				success: (response) => {

					if (response) {

						    Swal.fire(
      'Deleted!',
      'Your file has been deleted.',
      'success'
    )

						setTimeout(()=>{
              location.reload()
            },3000)
						//						alert("deleted successfully")
					}

				}

			})

  }
})

			
